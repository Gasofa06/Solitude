{
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css",

    "insertPragma": false,
    "requirePragma": false,

    "printWidth": 80,
    "proseWrap": "always",

    "semi": true,

    "quoteProps": "as-needed",
    "singleQuote": true,

    "tabWidth": 4,
    "useTabs": false,

    "trailingComma": "all",

    "overrides": [
        {
            "files": ["**/*.css", "**/*.scss", "**/*.html"],
            "options": {
                "printWidth": 100,
                "tabWidth": 2
            }
        },

        {
            "files": ["**/*.yml"],
            "options": {
                "printWidth": 180,
                "tabWidth": 2
            }
        }
    ]
}
